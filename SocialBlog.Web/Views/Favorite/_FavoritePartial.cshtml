@using SocialBlog.Core.Services.Favorite.Models;
@model FavoriteAllViewModel

<div class="card" style="width: 18rem;">
    <img src="@Model.PostImgUrlLink" class="card-img-top" alt="...">
    <div class="card-body">
        <p class="card-text">@Model.PostTitle</p>
        <div style="display: inline-block; padding-top: 40px; padding-right: 400px;">
            <a style="padding: 5px 45px; border-radius: 25px;" type="button" asp-controller="Blog" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-outline-warning" font-size="20px">Read</a>
        </div>
    </div>
</div>