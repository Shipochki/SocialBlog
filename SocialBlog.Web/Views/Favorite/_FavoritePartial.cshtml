@using SocialBlog.Core.Services.Favorite.Models;
@model FavoriteAllViewModel

<div class="card" style="width: 18rem;">
    <img src="@Model.PostImgUrlLink" class="card-img-top" alt="...">
    <div class="card-body">
        <p class="card-text">@Model.PostTitle</p>
        <div>
            <a style="border-radius: 25px; display: inline-block;" type="button" asp-controller="Blog" asp-action="Details" asp-route-id="@Model.PostId" class="btn btn-outline-warning" font-size="10px">Read</a>
            <a style="border-radius: 25px; display: inline-block;" type="button" action="post" asp-controller="Favorite" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger" font-size="10px">Delete</a>
        </div>
    </div>
</div>