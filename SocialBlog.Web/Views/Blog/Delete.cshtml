@using SocialBlog.Core.Services.Post.Models;
@model PostDeleteViewModel

@{
	ViewBag.Title = "Delete Post";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
	<div class="row">
		<div class="col-md-4">
			<img class="card-img-top" src="@Model.ImageUrlLink" alt="House Image" />
		</div>
		<div class="col-md-8">
			<div class="form-group">
				<label asp-for="Title" class="control-label"></label>
				<input asp-for="Title" class="form-control" disabled="disabled" />
			</div>
			<p></p>
			<div class="form-group">
				<input type="submit" value="Delete" class="btn btn-primary" />
				<a type="button" asp-controller="Blog" asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-danger" font-size="20px">Back</a>
			</div>
		</div>
	</div>
</form>
